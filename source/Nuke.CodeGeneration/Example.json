{
  "$schema": "https://raw.githubusercontent.com/nuke-build/nuke/master/source/Nuke.CodeGeneration/schema.json",
  "name": "SampleTool",
  "officialUrl": "https://official.url",
  "help": "Help text",
  "packageId": "SampleTool",
  "packageExecutable": "SampleTool.exe",
  "tasks": [
    {
      "settingsClass": {
        "properties": [
          {
            "name": "Force",
            "type": "bool",
            "format": "/force",
            "help": "Execute with force."
          },
          {
            "name": "Host",
            "type": "string",
            "format": "/host:{value}",
            "help": "Host to connect to."
          },
          {
            "name": "Items",
            "type": "List<string>",
            "format": "/items:{value}",
            "separator": "+",
            "help": "Bunch of items concatenated."
          }
        ]
      }
    },
    {
      "postfix": "SubCommand",
      "settingsClass": {
        "properties": [
          {
            "name": "Kind",
            "type": "SampleToolConnectionKind",
            "format": "/kind:{value}",
            "help": "Connection kind to use."
          }
        ]
      }
    }
  ],
  "enumerations": [
    {
      "name": "SampleToolConnectionKind",
      "values": [
        "Tcp",
        "Udp"
      ]
    }
  ]
}
